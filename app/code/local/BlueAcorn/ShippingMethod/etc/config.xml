<?xml version="1.0"?>
<config>
    <modules>
        <BlueAcorn_ShippingMethod>
            <version>1.0.0</version>
        </BlueAcorn_ShippingMethod>
    </modules>
    <global>
        <models>
            <shippingMethod>
                <class>BlueAcorn_ShippingMethod_Model</class>
            </shippingMethod>
        </models>
        <sales>
            <shipping>
                <carriers>
                    <custommethod>
                        <class>BlueAcorn_ShippingMethod_Model_Shipping_Carrier_CustomMethod</class>
                    </custommethod>
                </carriers>
            </shipping>
        </sales>
        <helpers>
            <blueacorn_shippingmethod>
                <class>BlueAcorn_ShippingMethod_Helper</class>
            </blueacorn_shippingmethod>
        </helpers>
    </global>
    <default>
        <carriers>
            <blueacornshipping>
                <active>0</active>
                <title>Blue Acorn Custom Shipping</title>
                <name>Weight Based</name>
                <connectionerrormessage>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</connectionerrormessage>
            </blueacornshipping>
        </carriers>
    </default>
</config>